{
  "env": {
    "CLAUDE_CODE_ENABLE_TELEMETRY": "1",
    "OTEL_METRICS_EXPORTER": "otlp",
    "OTEL_EXPORTER_OTLP_PROTOCOL": "grpc",
    "OTEL_EXPORTER_OTLP_ENDPOINT": "https://api-dogfood.honeycomb.io:443",
    "OTEL_METRIC_EXPORT_INTERVAL": "10000",
    "OTEL_EXPORTER_OTLP_HEADERS": "x-honeycomb-dataset=claude,x-honeycomb-team=hccik_01jw98sx5qfdetyb7c7tjc91kgnhb9dq7sga8920ytea7c8pzxntyr2cma"
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path | select(endswith(\".go\"))' | xargs -r goimports -local github.com/honeycombio/hound -w"
          },
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path | select(endswith(\".tsx\"))' | (cd \"${HOUND_ROOT:-$(go env GOPATH)/src/github.com/honeycombio/hound}/cmd/poodle\" && xargs -r yarn prettier -w)"
          }
        ]
      }
    ]
  }
}
